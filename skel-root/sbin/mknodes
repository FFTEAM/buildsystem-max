#!/bin/sh
/bin/echo "running $0"
# <name ><type> <mode> <uid> <gid> <major> <minor> <start> <inc> <count>

makedevs /dev << EOF
cnxt			d 755 0 0
dvb			d 755 0 0
dvb/adapter0		d 755 0 0
fb			d 755 0 0
input			d 755 0 0
pts			d 755 0 0
shm			d 755 0 0
shm/usb			d 755 0 0

mem			c 644 0 0 1	1
kmem			c 644 0 0 1	2
null			c 644 0 0 1	3
zero			c 644 0 0 1	5
random			c 644 0 0 1	8
urandom			c 644 0 0 1	9
console			c 644 0 0 5	1
ptmx			c 644 0 0 5	2
watchdog		c 644 0 0 10	130
fuse			c 644 0 0 10	229
fb0			c 644 0 0 29	0

ram			b 644 0 0 1	0 0 1 5
tty			c 644 0 0 5	0
tty			c 644 0 0 4	0 0 1 5
loop			b 644 0 0 7	0 0 1 5
mtdblock		b 644 0 0 31	0 0 1 5
mtd			c 644 0 0 90	0 0 2 5

sda			b 644 0 0 8	0
sdb			b 644 0 0 8	16
sdc			b 644 0 0 8	32
sdd			b 644 0 0 8	48
sde			b 644 0 0 8	64
sdf			b 644 0 0 8	80
sdg			b 644 0 0 8	96
sdh			b 644 0 0 8	112

sda			b 644 0 0 8	1	1 1 15
sdb			b 644 0 0 8	17	1 1 15
sdc			b 644 0 0 8	33	1 1 15
sdd			b 644 0 0 8	49	1 1 15
sde			b 644 0 0 8	65	1 1 15
sdf			b 644 0 0 8	81	1 1 15
sdg			b 644 0 0 8	97	1 1 15
sdh			b 644 0 0 8	113	1 1 15

ttyUSB			c 644 0 0 188	0	0 1 4

cnxt/cnxt_gen_drv	c 644 0 0 102	0
notifyq			c 644 0 0 102	1
user_kal		c 644 0 0 102	2
display			c 644 0 0 238	0
# newer drivers and libs
cs_control		c 644 0 0 249	0
# older drivers
cs_control_scart	c 644 0 0 250	0
cs_control_pwm		c 644 0 0 251	0
iolib			c 644 0 0 253	0

ttyRI			c 644 0 0 204	16	0 1 3

input/nevis_ir		c 644 0 0 240	0
input/event0_uinput	c 644 0 0 10	223
input/mouse		c 644 0 0 13	32	0 1 4
input/mice		c 644 0 0 13	63
input/event2		c 644 0 0 13	66
input/event3		c 644 0 0 13	67
dvb/adapter0/frontend0	c 644 0 0 212	3
EOF
ln -sf nevis_ir	/dev/input/event0
ln -sf nevis_ir	/dev/input/input0
ln -sf ../fb0	/dev/fb/0
ln -sf ram1	/dev/ram

/bin/echo "done $0"
